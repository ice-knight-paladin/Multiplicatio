<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/bottomSheetLayout"
    android:layout_width="wrap_content"
    android:layout_height="match_parent"
    android:layout_margin="10dp"
    android:orientation="vertical">

    <TextView
        android:id="@+id/btn_close_option"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/btn_style_close_option" />


    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="числа для умножения"
        android:textSize="30sp"
        android:textColor="@color/black"/>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="от"
            android:textSize="30sp"
            android:textColor="@color/black"
            android:layout_margin="5dp"/>

        <EditText
            android:id="@+id/editTextMinMulti"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:ems="10"
            android:inputType="number"
            android:textSize="25sp"
            android:textColor="@color/black"
            android:layout_margin="5dp"
            android:maxLength="2"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="до"
            android:textSize="30sp"
            android:textColor="@color/black"
            android:layout_margin="5dp"/>

        <EditText
            android:id="@+id/editTextMaxMulti"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:ems="10"
            android:inputType="number"
            android:textSize="25sp"
            android:textColor="@color/black"
            android:layout_margin="5dp"
            android:maxLength="2"/>
    </LinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="числа для деления"
        android:textSize="30sp"
        android:gravity="center"
        android:textColor="@color/black"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="от"
            android:textSize="30sp"
            android:textColor="@color/black"
            android:layout_margin="5dp"/>

        <EditText
            android:id="@+id/editTextMinDiv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:ems="10"
            android:inputType="number"
            android:textSize="25sp"
            android:textColor="@color/black"
            android:layout_margin="5dp"
            android:maxLength="2"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="до"
            android:textSize="30sp"
            android:textColor="@color/black"
            android:layout_margin="5dp"/>

        <EditText
            android:id="@+id/editTextMaxDiv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:ems="10"
            android:inputType="number"
            android:textSize="25sp"
            android:textColor="@color/black"
            android:layout_margin="5dp"
            android:maxLength="2"/>
    </LinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="числа для сложения"
        android:textSize="30sp"
        android:textColor="@color/black"
        android:gravity="center"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="от"
            android:textSize="30sp"
            android:textColor="@color/black"
            android:layout_margin="5dp"/>

        <EditText
            android:id="@+id/editTextMinPlus"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:ems="10"
            android:inputType="number"
            android:textSize="25sp"
            android:textColor="@color/black"
            android:layout_margin="5dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="до"
            android:textSize="30sp"
            android:textColor="@color/black"
            android:layout_margin="5dp"/>

        <EditText
            android:id="@+id/editTextMaxPlus"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:ems="10"
            android:inputType="number"
            android:textSize="25sp"
            android:textColor="@color/black"
            android:layout_margin="5dp"/>
    </LinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="числа для вычитания"
        android:textSize="30sp"
        android:gravity="center"
        android:textColor="@color/black"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="от"
            android:textSize="30sp"
            android:textColor="@color/black"
            android:layout_margin="5dp"/>

        <EditText
            android:id="@+id/editTextMinMinus"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:ems="10"
            android:inputType="number"
            android:textSize="25sp"
            android:textColor="@color/black"
            android:layout_margin="5dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="до"
            android:textSize="30sp"
            android:textColor="@color/black"
            android:layout_margin="5dp"/>

        <EditText
            android:id="@+id/editTextMaxMinus"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:ems="10"
            android:inputType="number"
            android:textSize="25sp"
            android:textColor="@color/black"
            android:layout_margin="5dp"/>
    </LinearLayout>

    <TextView
        android:id="@+id/checksave"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:visibility="gone"
        android:textColor="@android:color/holo_red_dark"
        android:gravity="center"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/btn_save_option"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/btn_style"
            android:gravity="center"
            android:text="сохранить"
            android:textColor="@color/black"
            android:textSize="28sp"
            android:layout_margin="5dp"
            android:padding="5dp"/>

        <TextView
            android:id="@+id/btn_cancel"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/btn_style"
            android:gravity="center"
            android:text="отмена"
            android:textColor="@color/black"
            android:textSize="28sp"
            android:layout_margin="5dp"
            android:padding="5dp"/>
    </LinearLayout>



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/btn_style"
            android:gravity="center"
            android:textColor="@color/black"
            android:textSize="28sp"
            android:text="показать статистику"
            android:layout_margin="5dp"
            android:padding="5dp"/>

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/btn_style"
            android:gravity="center"
            android:textColor="@color/black"
            android:textSize="28sp"
            android:text="стереть статистику"
            android:layout_margin="5dp"
            android:padding="5dp"/>
    </LinearLayout>

</LinearLayout>